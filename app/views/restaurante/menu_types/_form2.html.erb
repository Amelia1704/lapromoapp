<%= simple_form_for([:restaurante, @menu_type], defaults: { input_html: { class: 'form-control' } }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, :label => "Nombre del menú", placeholder: "(Cena, Almuerzo, Carnes...)"%> 
    <hr></hr>
  </div>

    <div class="form-actions">
      <%= f.submit "Editar menú", :class => 'btn btn-success'%>
      <%= link_to 'Atrás', restaurante_menu_types_path, :class => 'btn btn-primary'%>
    </div>
  <% end %>

<%= simple_form_for([:restaurante, @promo], defaults: { input_html: { class: 'form-control' } }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :yumis, :label => "Seleccione si acepta Yumis la promoción", input_html: { class: 'checkbox' } %>
      <hr></hr>
      <%= f.input :promo_type, input_html: {value: f.object.promo_type || '% de descuento'}, :as => :hidden%>
      <%= f.input :name, :label => "Nombre de la promoción" %>
      <hr></hr>
      <%= f.input :description, :label => "Descripción de la promoción"%>
      <hr></hr>
    </div>
  
    <%= simple_form_for([:restaurante, @calendar], defaults: { input_html: { class: 'form-group' } }) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    
      <div class="form-inputs">
      <%= f.label :final_date, 'Fecha de la promoción *' %>
      <%= f.datetime_select :final_date %>
      <hr></hr>
     </div>
       
     <div class="form-actions">
     <%= f.submit "Crear promoción", :class => 'btn btn-success' %>
     <%= link_to 'Atras', restaurante_promos_path, :class => 'btn btn-primary' %>
   </div>
    <% end %>
    <% end %>
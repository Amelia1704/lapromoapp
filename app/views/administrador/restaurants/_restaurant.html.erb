    <div class="row div-dark">
        <div class="col-md-12">
            <span class="custom-letra"><%= restaurant.name%></span>
            
            <div class="float-right">
              <%= link_to 'Ver', [:administrador, restaurant], class: "btn btn-primary" %>
              <% if request.original_fullpath == '/administrador/not_approved' %>
              <%= link_to  "Aprobar", administrador_approve_path(restaurant), class: "btn btn-primary" %>
              <%= link_to  "Rechazar", administrador_reject_restaurant_path(restaurant), method: :delete, class: "btn btn-primary" %>
              <% elsif request.original_fullpath == '/administrador/aprobados' %>
              <%= link_to  "Cancelar acceso", administrador_cancel_path(restaurant), class: "btn btn-primary" %>
              <% end %>
            </div>
              <% if (User.find(restaurant.user_id).approved == true &&
                    request.original_fullpath == '/administrador/restaurants')%>
              <span class="custom-letra left twinkling">Aprobado</span> 
               <% elsif (User.find(restaurant.user_id).approved == false &&
             request.original_fullpath == '/administrador/restaurants') %>
              <span class="custom-letra left twinkling-two">Pendiente</span>       
              <% end %>
       
        </div>
      </div>
 